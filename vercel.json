{
  "version": 2,
  "installCommand": "pip install -r api/requirements.txt",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "PYTHONPATH": "."
  },
  "functions": {
    "api/index.py": {
      "includeFiles": "agents/**",
      "runtime": "python3.9",
      "maxDuration": 30
    }
  }
}
